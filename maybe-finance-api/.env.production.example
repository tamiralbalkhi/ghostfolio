# Production environment variables - EXAMPLE FILE
# Copy to .env.production and fill with actual values
# DO NOT commit .env.production to version control

# Database
DB_HOST=your_production_db_host
DB_PORT=5432
DB_USERNAME=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_NAME=maybe_finance_api_production

# Redis
REDIS_URL=redis://your_redis_host:6379/0

# API Origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# External API Keys
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key
COINGECKO_API_KEY=your_coingecko_api_key

# Application Settings
RAILS_MAX_THREADS=10
RAILS_MIN_THREADS=5
RAILS_LOG_LEVEL=info

# Security
SECRET_KEY_BASE=your_long_random_secret_key
DEVISE_JWT_SECRET_KEY=your_jwt_secret_key

# Monitoring (optional)
NEW_RELIC_LICENSE_KEY=your_newrelic_key
SENTRY_DSN=your_sentry_dsn
